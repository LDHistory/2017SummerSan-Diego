<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:id="@+id/tabHost1"
        android:layout_width="0dp"
        android:layout_height="685dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tabHost2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/common_google_signin_btn_text_dark_default" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="631dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="493dp"
                        android:background="@android:color/background_light">

                        <TabHost
                            android:id="@+id/tabHost2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_below="@+id/imageView14"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TabWidget
                                    android:id="@android:id/tabs"
                                    style="@android:style/Widget.Holo.TabWidget"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@android:color/background_light" />

                                <FrameLayout
                                    android:id="@android:id/tabcontent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:id="@+id/tab1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <com.google.android.gms.maps.MapView
                                            android:id="@+id/map"
                                            android:name="com.google.android.gms.maps.MapFragment"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/tab2"
                                        android:layout_width="match_parent"
                                        android:layout_height="237dp"
                                        android:orientation="vertical">

                                        <com.github.mikephil.charting.charts.LineChart
                                            android:id="@+id/co_chart"
                                            android:layout_width="match_parent"
                                            android:layout_height="227dp"
                                            android:layout_alignParentStart="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginBottom="8dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginTop="8dp"
                                            app:layout_constraintBottom_toBottomOf="@+id/parent"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />
                                    </LinearLayout>

                                </FrameLayout>
                            </LinearLayout>
                        </TabHost>

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_alignTop="@+id/imageView11"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/no2" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="12dp"
                            app:srcCompat="@drawable/co"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/imageView12"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/so2" />

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/o3"
                            android:layout_below="@+id/imageView11"
                            android:layout_alignStart="@+id/imageView11" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_alignStart="@+id/imageView12"
                            android:layout_alignTop="@+id/imageView14"
                            app:srcCompat="@drawable/pm25" />

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_alignStart="@+id/imageView13"
                            android:layout_alignTop="@+id/imageView15"
                            app:srcCompat="@drawable/temp" />

                        <TextView
                            android:id="@+id/co_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/imageView14"
                            android:layout_alignEnd="@+id/imageView11"
                            android:layout_marginBottom="19dp"
                            android:layout_marginEnd="24dp"
                            android:text="          "
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/no2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="           "
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_alignBaseline="@+id/co_text"
                            android:layout_alignBottom="@+id/co_text"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/so2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="           "
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_alignBaseline="@+id/no2_text"
                            android:layout_alignBottom="@+id/no2_text"
                            android:layout_alignEnd="@+id/imageView13"
                            android:layout_marginEnd="25dp" />

                        <TextView
                            android:id="@+id/o3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imageView14"
                            android:layout_alignEnd="@+id/co_text"
                            android:layout_marginBottom="18dp"
                            android:text="           "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pm25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/o3_text"
                            android:layout_alignEnd="@+id/no2_text"
                            android:layout_alignStart="@+id/no2_text"
                            android:text="           "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/temp_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/pm25"
                            android:layout_alignEnd="@+id/so2_text"
                            android:layout_alignStart="@+id/so2_text"
                            android:text="           "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light">

                        <ImageView
                            android:id="@+id/heart"
                            android:layout_width="180dp"
                            android:layout_height="292dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.022"
                            app:layout_constraintHorizontal_bias="0.161" />

                        <TextView
                            android:id="@+id/heartValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/background_light"
                            android:textSize="40dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.099"
                            app:layout_constraintHorizontal_bias="0.306" />

                        <ImageView
                            android:id="@+id/heartbit"
                            android:layout_width="122dp"
                            android:layout_height="100dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.321"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintHorizontal_bias="0.231"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/MHV"
                            android:layout_width="59dp"
                            android:layout_height="30dp"
                            android:text="MIN"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginTop="27dp"
                            app:layout_constraintTop_toBottomOf="@+id/HMValue"
                            app:layout_constraintLeft_toRightOf="@+id/heart"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0.385"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/HMV"
                            android:layout_width="57dp"
                            android:layout_height="27dp"
                            android:text="MAX"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="78dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/heart"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintHorizontal_bias="0.377"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/HMValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Value"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="20dp"
                            android:layout_marginTop="14dp"
                            app:layout_constraintTop_toBottomOf="@+id/HMV"
                            app:layout_constraintLeft_toRightOf="@+id/heart"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0.352"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/MHValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Value"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/MHV"
                            app:layout_constraintLeft_toRightOf="@+id/heart"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintHorizontal_bias="0.352"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/hart_chart"
                            app:layout_constraintVertical_bias="0.0" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/hart_chart"
                            android:layout_width="327dp"
                            android:layout_height="150dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintHorizontal_bias="0.571"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/heart"
                            app:layout_constraintVertical_bias="0.0"
                            tools:layout_editor_absoluteX="46dp" />

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</android.support.constraint.ConstraintLayout>