<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/resetSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/resetMonth"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toLeftOf="@+id/resetCancel"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintVertical_bias="0.287" />

        <Button
            android:id="@+id/resetCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/resetMonth"
            android:layout_marginRight="87dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.287" />

        <TextView
            android:id="@+id/ViewResetEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="black"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/ViewReset"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/ViewResetBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textColor="black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/resetEmail"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.501" />

        <EditText
            android:id="@+id/resetEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/ViewResetEmail"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.503" />

        <Spinner
            android:id="@+id/resetDay"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ViewResetBirth"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Spinner
            android:id="@+id/resetMonth"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ViewResetBirth"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Spinner
            android:id="@+id/resetYear"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ViewResetBirth"
            android:layout_marginLeft="40dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/ViewReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Your Password"
            android:textColor="black"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
